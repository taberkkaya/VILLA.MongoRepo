@model List<ResultCounterDto>

@{
    ViewData["Title"] = "Counter List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }

    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Count</th>
        <th>Operations</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Count</td>
            <td>
                <a asp-controller="Counter" asp-action="DeleteCounter" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                <a asp-controller="Counter" asp-action="UpdateCounter" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Counter" asp-action="CreateCounter" class="btn btn-outline-dark">Create</a>
