@model List<ResultSubHeaderDto>
@{
    ViewData["Title"] = "SubHeader List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Address </th>
        <th>Email </th>
        <th>Facebook </th>
        <th>Twitter </th>
        <th>LinkedIn </th>
        <th>Instagram </th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Address </td>
            <td>@item.Email </td>
            <td>@item.Facebook </td>
            <td>@item.Twitter </td>
            <td>@item.LinkedIn </td>
            <td>@item.Instagram </td>
            <td>
                @* <a asp-controller="Video" asp-action="DeleteVideo" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a> *@
                <button onclick="deleteSubHeader(this)" id="@item.Id" class="btn btn-outline-danger">Delete</button>
                <a asp-controller="SubHeader" asp-action="UpdateSubHeader" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="SubHeader" asp-action="CreateSubHeader" class="btn btn-outline-dark">Create</a>

<script>
    function deleteSubHeader(button) {
        var id = button.getAttribute("id");
        Swal.fire({

            title: 'Silmek istediğinize emin misiniz?',
            text: 'Bu işlemi geri alamazsınız!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/SubHeader/DeleteSubHeader/" + id;
            }
        });
    };
</script>